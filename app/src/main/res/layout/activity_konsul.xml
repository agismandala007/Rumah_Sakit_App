<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".Konsul">

    <ImageView
        android:layout_width="288dp"
        android:layout_height="62dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/oasismedical"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="570dp"
        android:background="@drawable/rounded_atas"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:text="Tujuan :"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/emailTujuan"
                android:layout_width="180dp"
                android:inputType="textEmailAddress"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:text="Subjek :"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/emailSubjek"
                android:layout_width="180dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginLeft="30dp"
            android:text="Isi"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/emailEmail"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="330dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@drawable/isi_field"
            android:gravity="top|start"
            android:scrollbars="vertical"
            android:inputType="textMultiLine"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="190dp"
            android:backgroundTint="#ec335c"
            android:text="Kirim"
            android:onClick="sendEmail"/>
    </LinearLayout>

</LinearLayout>